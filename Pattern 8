import java.util.*;
class Main {
	public static void main(String args[]) {
		// Your code goes here
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		
		for(int i=1; i<=n; i++){

			for(int j=1; j<=n-i+1; j++){
					System.out.print("*");
			}

			for(int s=1; s<=2*(i-1); s++){
				System.out.print("-");
			}

			for(int k=1; k<=n-i+1; k++){
				System.out.print("*");
			}
			System.out.println();
		}


	}
}
