import java.util.*;
class Main {
	public static void main(String args[]) {
		// Your code goes here
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();

		for(int k=1; k<=n; k++){
			System.out.print("*");
		}
		System.out.println();
		//n=n-1;
		for(int i=1; i<=n-2; i++){
			System.out.print("*");

			for(int s=1; s<=n-i-2; s++){
				System.out.print(" ");
			}
			System.out.print("*");
			System.out.println();
		}
		System.out.print("*");
		
	}
}
