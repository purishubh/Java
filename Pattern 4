import java.util.*;
class Main {
	public static void main(String args[]) {
		// Your code goes here
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();

		for(int i=1; i<=n; i++){
			System.out.print("*");

			if(i==1 || i==n){
				for(int j=1; j<=3; j++){
					System.out.print("*");
				}
			}

			if(i!=1 && i!=n){
				for(int s=1; s<=3; s++){
					System.out.print("-");
				}
			}
			System.out.println("*");
			//System.out.println();
		}

	}
}
